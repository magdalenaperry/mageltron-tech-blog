<div class="menu-container">
  <div class="card-header col-md-12">
    <h2>
      POST:
    </h2>
  </div>
  <div class="card text-white bg-primary mb-3">
    <div class="card-header text-info">{{user.username}}</div>
    <div class="card-body">
      <h4 class="card-title">{{title}}</h4>
      <p class="card-text">{{post_body}}</p>
    </div>
  </div>


  <div class="menu-container">
    <div class="card-header col-md-12">
      <h2>
        Comments
      </h2>
    </div>
    {{#each comments}}
    <div class="card bg-secondary mb-3">
      <div class="card-body">
        <h4 class="card-title"></h4>

        <p class="card-text">{{comment_body}}</p>
        <div class="card-text text-info">{{user.username}}</div>
        <p>{{dateCreated}}</p>

        <a id="update-comment" type="submit" class="btn btn-link text-lowercase text-decoration-none">Update</a>

        <a id="delete-comment" type="submit" class="btn btn-link text-lowercase text-decoration-none">Delete</a>

      </div>
    </div>
    {{/each}}

  </div>

  <div class="card border-dark mb-3">
    <h4 class="card-header">Comment</h4>
    <div class="card-body">
      <div>
        <form class="add-comment">
          <div class="mb-3">
            <label for="comment_body" class="form-label"></label>
            <textarea class="form-control" id="comment_body" placeholder="...be nice"></textarea>
          </div>
          <button type="submit" href="" class="btn btn-primary">Submit</button>
        </form>
      </div>
    </div>
  </div>
</div>
{{!-- links to script that posts that links to newpost segment in controllers/post-route --}}
<script src="/js/add-comment.js"></script>
<script src="/js/up-del-comment.js"></script>